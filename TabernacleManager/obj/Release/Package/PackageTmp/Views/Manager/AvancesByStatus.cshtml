@model TabernacleManager.Models.TabernacleManagerView

<section class="content-header">
    <h1>
        Consultation
        <small> Liste Des Requetes</small>
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>CodeRequete</th>
                    <th>Montant</th>
                    <th>Pourcentage</th>
                    <th>Delai</th>
                    <th>Motif Requete</th>
                    <th>Date Requete</th>
                    <th>Statut</th>
                    <th>Matricule Employe</th>
                    <th>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Avances)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodeRequete)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Montant)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pourcentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DelaiEnMois)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MotifRequete)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRequete)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Statut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employe.Matricule)
                        </td>
                        <td>
                            @*Gestion Des Actions En Fonction Des Users*@
                            @Html.ActionLink("Details ", "AvanceDetails", "Manager", new { CodeRequete = item.CodeRequete }, new { @class = "btn btn-info details" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>