@model TabernacleManager.Models.Utilisateur

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Connexion - Tabernacle</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/ConnexionWeb/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/ConnexionWeb/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../images/img-01.jpg');">
            <div class="wrap-login100 p-t-50 p-b-0">
                <form class="login100-form validate-form" method="post">
                    <div class="login100-form-avatar">
                        <img src="~/ConnexionWeb/images/avatar-01.jpg" alt="AVATAR">
                    </div>

                    <span class="login100-form-title p-t-20 p-b-45">
                        Tabernacle
                    </span>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Login is required">
                        <input class="input100" type="text" name="login" id="login" placeholder="Identifiant">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Pwd is required">
                        <input class="input100" type="password" name="Pwd" id="Pwd" placeholder="Mot De Passe">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn p-t-10">
                        <input type="submit" value="Connexion" class="login100-form-btn" @*onclick="Validate()"*@>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/ConnexionWeb/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ConnexionWeb/vendor/bootstrap/js/popper.js"></script>
    <script src="~/ConnexionWeb/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ConnexionWeb/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ConnexionWeb/js/main.js"></script>


    <script>
  function Validate() {
    $.ajax(
    {
        type: "POST",
      url: '@Url.Action("Validate", "Account")',
      data: {
        login: $('#login').val(),
        Pwd: $('#Pwd').val()
      },
      error: function (result) {
        alert("There is a Problem, Try Again!");
      },
      success: function (result) {
        console.log(result);
        if (result.status == true) {
          window.location.href = '@Url.Action("Index", "Home")';
        }
        else {
          alert(result.message);
        }
      }
    });
  }
    </script>

</body>
</html>